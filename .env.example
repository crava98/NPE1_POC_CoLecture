# =============================================================================
# AI Presentation Factory - Environment Variables
# =============================================================================
# Copy to .env for local development
# In Portainer: Set these variables in Stack environment settings
# =============================================================================

# --- REQUIRED ---
GOOGLE_API_KEY=your_google_api_key_here

# --- OPTIONAL: Image Generation ---
N8N_WEBHOOK_URL=https://your-n8n-instance/webhook/image-generator
N8N_AUTH_TOKEN=your_n8n_auth_token

# --- OPTIONAL: External Access (ngrok) ---
NGROK_AUTHTOKEN=your_ngrok_authtoken
NGROK_BASIC_AUTH=username:password

# --- DEPLOYMENT (Portainer) ---
# Registry prefix (e.g., "docker.io/myuser/" or "registry.example.com/")
REGISTRY=
# Image tag (default: latest)
TAG=latest

# --- PORT CONFIGURATION ---
AGENT_PORT=8501
MCP_PORT=8010
NGROK_DASHBOARD_PORT=4040
